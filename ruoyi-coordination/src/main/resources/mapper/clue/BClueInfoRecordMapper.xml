    </sql>

    <select id="selectBClueInfoRecordList" parameterType="BClueInfoRecord" resultMap="BClueInfoRecordResult">
        <include refid="selectBClueInfoRecordVo"/>
        <where>  
            <if test="receiveId != null "> and receive_id = #{receiveId}</if>
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="recordNum != null "> and record_num = #{recordNum}</if>
            <if test="recordState != null  and recordState != ''"> and record_state = #{recordState}</if>
            <if test="recordContent != null  and recordContent != ''"> and record_content = #{recordContent}</if>
            <if test="createDeptId != null "> and create_dept_id = #{createDeptId}</if>
            <if test="createDeptName != null  and createDeptName != ''"> and create_dept_name like concat('%', #{createDeptName}, '%')</if>
            <if test="createUserId != null "> and create_user_id = #{createUserId}</if>
            <if test="createUserName != null  and createUserName != ''"> and create_user_name like concat('%', #{createUserName}, '%')</if>
            <if test="completeTime != null "> and complete_time = #{completeTime}</if>
            <if test="auditTime != null "> and audit_time = #{auditTime}</if>
            <if test="auditIdea != null  and auditIdea != ''"> and audit_idea = #{auditIdea}</if>
            <if test="auditDeptId != null "> and audit_dept_id = #{auditDeptId}</if>
            <if test="auditDeptName != null  and auditDeptName != ''"> and audit_dept_name like concat('%', #{auditDeptName}, '%')</if>
            <if test="auditUserId != null "> and audit_user_id = #{auditUserId}</if>
            <if test="auditUserName != null  and auditUserName != ''"> and audit_user_name like concat('%', #{auditUserName}, '%')</if>
        </where>
    </select>
    
