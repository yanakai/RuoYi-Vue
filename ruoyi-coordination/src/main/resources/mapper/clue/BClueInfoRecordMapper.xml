    </select>
    <select id="getMaxRecordNum" resultType="java.lang.Long">
        select count(1) from b_clue_info_record where receive_id = #{receiveId}
    </select>
    <select id="selectBClueInfoRecordAndList" parameterType="BClueInfoRecord" resultMap="BClueRecordAndFileRes">
        SELECT
        bcir.record_id, bcir.receive_id, bcir.task_id, bcir.record_num, bcir.record_state, bcir.record_content,
        bcir.create_time, bcir.create_dept_id, bcir.create_dept_name, bcir.create_user_id, bcir.create_user_name,
        bcir.remark, bcirf.file_id, bcirf.file_name, bcirf.file_path, bcirf.file_type, bcie.ex_id, bcie.ex_state,
        bcie.ex_content, bcie.ex_user_name, bcie.ex_dept_name, bcie.ex_time
        FROM
        b_clue_info_record bcir
        LEFT JOIN b_clue_info_examine bcie
        ON bcir.record_id = bcie.record_id
        LEFT JOIN b_clue_info_record_file bcirf
        ON bcir.record_id = bcirf.record_id
        <where>
        <if test="receiveId != null "> and bcir.receive_id = #{receiveId}</if>
        <if test="taskId != null "> and bcir.task_id = #{taskId}</if>
        </where>
        order by bcir.record_num desc
    </select>

