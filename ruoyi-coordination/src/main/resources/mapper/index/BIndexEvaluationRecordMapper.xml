            <if test="auditUserId != null">audit_user_id = #{auditUserId},</if>
            <if test="auditUserName != null">audit_user_name = #{auditUserName},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteBIndexEvaluationRecordByRecordId" parameterType="Long">
        delete from b_index_evaluation_record where record_id = #{recordId}
    </delete>

    <delete id="deleteBIndexEvaluationRecordByRecordIds" parameterType="String">
        delete from b_index_evaluation_record where record_id in 
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>
</mapper>