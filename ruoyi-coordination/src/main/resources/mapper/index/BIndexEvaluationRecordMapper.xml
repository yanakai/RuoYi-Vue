<mapper namespace="com.ruoyi.coordination.index.mapper.BIndexEvaluationRecordMapper">
    
    <resultMap type="BIndexEvaluationRecord" id="BIndexEvaluationRecordResult">
        <result property="recordId"    column="record_id"    />
        <result property="receiveId"    column="receive_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="recordNum" column="record_num"/>
        <result property="recordContent"    column="record_content"    />
        <result property="recordState"    column="record_state"    />
        <result property="createTime"    column="create_time"    />
        <result property="createDeptId"    column="create_dept_id"    />
        <result property="createDeptName"    column="create_dept_name"    />
        <result property="createUserId"    column="create_user_id"    />
        <result property="createUserName"    column="create_user_name"    />
        <result property="completeTime"    column="complete_time"    />
        <result property="auditTime"    column="audit_time"    />
        <result property="auditIdea"    column="audit_idea"    />
        <result property="auditDeptId"    column="audit_dept_id"    />
        <result property="auditDeptName"    column="audit_dept_name"    />
        <result property="auditUserId"    column="audit_user_id"    />
        <result property="auditUserName"    column="audit_user_name"    />
        <result property="remark"    column="remark"    />
        </resultMap>
    <resultMap id="BIndexEvaRecordAndFileRes" type="EvaRecordAndFile" extends="BIndexEvaluationRecordResult">
        <collection property="fileList" javaType="java.util.List" ofType="BIndexEvaluationRecordFile">
            <result property="fileId"    column="file_id"    />
            <result property="fileName"    column="file_name"    />
            <result property="filePath"    column="file_path"    />
            <result property="fileType"    column="file_type"    />
        </collection>
    </resultMap>
    <resultMap id="BIndexEvaRecordFile" type="BIndexEvaluationRecordFile" extends="com.ruoyi.coordination.index.mapper.BIndexEvaluationRecordFileMapper.BIndexEvaluationRecordFileResult">
    </resultMap>

    <sql id="selectBIndexEvaluationRecordVo">
        select record_id, receive_id, task_id, record_content, record_state, create_time, create_dept_id, create_dept_name, create_user_id, create_user_name, complete_time, audit_time, audit_idea, audit_dept_id, audit_dept_name, audit_user_id, audit_user_name, remark from b_index_evaluation_record
    </sql>

    <select id="selectBIndexEvaluationRecordList" parameterType="BIndexEvaluationRecord" resultMap="BIndexEvaluationRecordResult">
        <include refid="selectBIndexEvaluationRecordVo"/>
        <where>  
            <if test="receiveId != null "> and receive_id = #{receiveId}</if>
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="recordContent != null  and recordContent != ''"> and record_content = #{recordContent}</if>
            <if test="recordState != null  and recordState != ''"> and record_state = #{recordState}</if>
            <if test="createDeptId != null "> and create_dept_id = #{createDeptId}</if>
            <if test="createDeptName != null  and createDeptName != ''"> and create_dept_name like concat('%', #{createDeptName}, '%')</if>
            <if test="createUserId != null "> and create_user_id = #{createUserId}</if>
            <if test="createUserName != null  and createUserName != ''"> and create_user_name like concat('%', #{createUserName}, '%')</if>
            <if test="completeTime != null "> and complete_time = #{completeTime}</if>
            <if test="auditTime != null "> and audit_time = #{auditTime}</if>
            <if test="auditIdea != null  and auditIdea != ''"> and audit_idea = #{auditIdea}</if>
            <if test="auditDeptId != null "> and audit_dept_id = #{auditDeptId}</if>
            <if test="auditDeptName != null  and auditDeptName != ''"> and audit_dept_name like concat('%', #{auditDeptName}, '%')</if>
            <if test="auditUserId != null "> and audit_user_id = #{auditUserId}</if>
            <if test="auditUserName != null  and auditUserName != ''"> and audit_user_name like concat('%', #{auditUserName}, '%')</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectBIndexEvaluationRecordByRecordId" parameterType="Long" resultMap="BIndexEvaluationRecordResult">
        <include refid="selectBIndexEvaluationRecordVo"/>
        where record_id = #{recordId}
    </select>
    <select id="selectBIndexEvaluationRecords" parameterType="BIndexEvaluationRecord"
            resultMap="BIndexEvaRecordAndFileRes">
        SELECT
            bier.*,
            bierf.file_id,
            bierf.file_name,
            bierf.file_path,
            bierf.file_type
        FROM
            b_index_evaluation_record bier
                LEFT JOIN b_index_evaluation_record_file bierf ON bier.record_id = bierf.record_id
        where bier.receive_id = #{receiveId}
    </select>
    <select id="selectBIndexEvaluationRecordsByReceiveId" parameterType="Long"
            resultMap="BIndexEvaRecordAndFileRes">
        SELECT
            bier.record_id,
            record_num,
            record_content,
            file_id,
            file_name,
            file_path,
            file_type
        FROM
            b_index_evaluation_record bier
                LEFT JOIN
            b_index_evaluation_record_file bierf
            on
                bier.record_id = bierf.record_id
        where bier.receive_id = #{receiveId} ORDER BY record_num desc LIMIT 1
    </select>
    <select id="getMaxRecordNum" resultType="java.lang.Integer">
        select max(record_num) from b_index_evaluation_record where receive_id = #{receiveId}
    </select>

    <insert id="insertBIndexEvaluationRecord" parameterType="BIndexEvaluationRecord" useGeneratedKeys="true" keyProperty="recordId">
        insert into b_index_evaluation_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="receiveId != null">receive_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="recordContent != null">record_content,</if>
            <if test="recordState != null">record_state,</if>
            <if test="recordNum != null">record_num,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createDeptId != null">create_dept_id,</if>
            <if test="createDeptName != null">create_dept_name,</if>
            <if test="createUserId != null">create_user_id,</if>
            <if test="createUserName != null">create_user_name,</if>
            <if test="completeTime != null">complete_time,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="auditIdea != null">audit_idea,</if>
            <if test="auditDeptId != null">audit_dept_id,</if>
            <if test="auditDeptName != null">audit_dept_name,</if>
            <if test="auditUserId != null">audit_user_id,</if>
            <if test="auditUserName != null">audit_user_name,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
