    <sql id="selectTBasPollutantCodeVo">
        select id, 2017_code, 2005_code, pollutant_code, pollutant_name_en, pollutant_name_cn, pollutant_type, pollutant_unit_en, pollutant_unit_cn, pollutant_status, pollutant_sort from t_bas_pollutant_code
